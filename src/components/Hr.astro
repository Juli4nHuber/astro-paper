---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
}

const { noPadding = false, ariaHidden = true } = Astro.props;
---

<div class={`max-w-3xl mx-auto ${noPadding ? "px-0" : "px-4"}`}>
  <hr class="border-1 border-dashed border-orange-500 dark:border-orange-600" aria-hidden={ariaHidden} />
</div>
